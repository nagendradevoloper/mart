                <!-- Support Ticket Form -->
                <div>
                    <div style="background: var(--white); border: 1px solid var(--border-color); padding: 2rem; border-radius: var(--border-radius);">
                        <h3 style="margin-bottom: 1.5rem;">Raise a Support Ticket</h3>
                        <form onsubmit="submitTicket(event)">
