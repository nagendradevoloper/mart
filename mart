    <!-- Theme Toggle Button -->
    <button class="theme-toggle" onclick="toggleTheme()" id="theme-toggle">
        🌙
    </button>

    <!-- Live Chat Button -->
    <button style="position: fixed; bottom: 20px; left: 20px; background: var(--secondary-green); color: white; border: none; border-radius: 50px; padding: 15px 20px; cursor: pointer; font-weight: 600; box-shadow: var(--shadow); z-index: 1000;" onclick="openChat()">
        💬 Live Chat
    </button>

    <script>
        // Global variables
        let cartItems = [];
        let currentPage = 'home';
        let isDarkTheme = false;

        // Page Navigation
        function showPage(pageId) {
            // Hide all pages
            const pages = document.querySelectorAll('.page-section');
            pages.forEach(page => page.classList.remove('active'));
            
            // Show selected page
            document.getElementById(pageId).classList.add('active');
            currentPage = pageId;
            
            // Scroll to top
            window.scrollTo(0, 0);
        }

        // Modal Functions
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Login/Signup Tab Switching
        function switchLoginTab(tab) {
            const loginForm = document.getElementById('login-form');
            const signupForm = document.getElementById('signup-form');
            const tabs = document.querySelectorAll('.modal-tab');
            
            tabs.forEach(t => t.classList.remove('active'));
            
            if (tab === 'login') {
                loginForm.style.display = 'block';
                signupForm.style.display = 'none';
                tabs[0].classList.add('active');
            } else {
                loginForm.style.display = 'none';
                signupForm.style.display = 'block';
                tabs[1].classList.add('active');
            }
        }

        // Product Tab Switching
        function switchTab(tab) {
            // Hide all tab contents
            const contents = document.querySelectorAll('.tab-content');
            contents.forEach(content => content.style.display = 'none');
            
            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.modal-tab');
            tabs.forEach(t => t.classList.remove('active'));
            
            // Show selected tab content
            document.getElementById(tab + '-tab').style.display = 'block';
            
            // Add active class to selected tab
            if (tab === 'description') tabs[0].classList.add('active');
            else if (tab === 'specifications') tabs[1].classList.add('active');
            else if (tab === 'reviews') tabs[2].classList.add('active');
        }

        // Cart Functions
        function addToCart() {
            // Add item to cart
            const cartCount = document.querySelector('.cart-count');
            let currentCount = parseInt(cartCount.textContent);
            cartCount.textContent = currentCount + 1;
            
            // Show success toast
            showToast('Item added to cart!', 'success');
            
            // Add bounce animation to cart icon
            const cartIcon = document.querySelector('.fa-shopping-cart');
            cartIcon.style.animation = 'bounce 0.5s ease';
            setTimeout(() => {
                cartIcon.style.animation = '';
            }, 500);
        }

        function updateQuantity(itemId, change) {
            // Update quantity logic here
            showToast('Quantity updated!', 'success');
        }

        function removeFromCart(itemId) {
            // Remove item from cart logic here
            const cartCount = document.querySelector('.cart-count');
            let currentCount = parseInt(cartCount.textContent);
            if (currentCount > 0) {
                cartCount.textContent = currentCount - 1;
            }
            showToast('Item removed from cart!', 'info');
        }

        // Wishlist Functions
        function toggleWishlist() {
            showToast('Added to wishlist!', 'success');
        }

        // Authentication Functions
        function login() {
            showToast('Login successful!', 'success');
            closeModal('login-modal');
        }

        function signup() {
            showToast('Account created successfully!', 'success');
            closeModal('login-modal');
        }

        // Order Functions
        function placeOrder() {
            // Show confetti animation
            createConfetti();
            showToast('Order placed successfully!', 'success');
            
            setTimeout(() => {
                showPage('home');
            }, 2000);
        }

        // Support Functions
        function toggleFaq(faqId) {
            const answer = document.getElementById('faq-answer-' + faqId);
            const icon = document.getElementById('faq-icon-' + faqId);
            
            if (answer.style.display === 'none' || answer.style.display === '') {
                answer.style.display = 'block';
                icon.textContent = '-';
            } else {
                answer.style.display = 'none';
                icon.textContent = '+';
            }
        }

        function submitTicket(event) {
            event.preventDefault();
            showToast('Support ticket submitted successfully!', 'success');
            event.target.reset();
        }

        function openChat() {
            showToast('Chat feature coming soon!', 'info');
        }

        // Theme Functions
        function toggleTheme() {
            isDarkTheme = !isDarkTheme;
            const body = document.body;
            const themeToggle = document.getElementById('theme-toggle');
            
            if (isDarkTheme) {
                body.classList.add('dark-theme');
                themeToggle.textContent = '☀️';
            } else {
                body.classList.remove('dark-theme');
                themeToggle.textContent = '🌙';
            }
        }

        // Toast Notification Function
        function showToast(message, type = 'success') {
            const toast = document.createElement('div');
            toast.className = 'toast show';
            toast.textContent = message;
            
            if (type === 'success') {
                toast.style.background = 'var(--success)';
            } else if (type === 'info') {
                toast.style.background = 'var(--accent-blue)';
            } else if (type === 'warning') {
                toast.style.background = 'var(--warning)';
            } else if (type === 'error') {
                toast.style.background = 'var(--danger)';
            }
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Confetti Animation
        function createConfetti() {
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.left = Math.random() * 100 + '%';
                confetti.style.animationDelay = Math.random() * 3 + 's';
                confetti.style.background = ['var(--primary-orange)', 'var(--secondary-green)', 'var(--accent-blue)'][Math.floor(Math.random() * 3)];
                document.body.appendChild(confetti);
                
                setTimeout(() => {
                    confetti.remove();
                }, 3000);
            }
        }

        // Carousel Auto-play
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-slide');

        function nextSlide() {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }

        // Auto-advance carousel every 5 seconds
        setInterval(nextSlide, 5000);

        // Search Functionality
        document.querySelector('.search-box').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const searchTerm = this.value;
                if (searchTerm.trim()) {
                    showToast('Searching for: ' + searchTerm, 'info');
                    showPage('category'); // Show category page as search results
                }
            }
        });

        document.querySelector('.search-btn').addEventListener('click', function() {
            const searchTerm = document.querySelector('.search-box').value;
            if (searchTerm.trim()) {
                showToast('Searching for: ' + searchTerm, 'info');
                showPage('category'); // Show category page as search results
            }
        });

        // Close modal when clicking outside
        document.addEventListener('click', function(event) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (event.target === modal) {
                    modal.classList.remove('active');
                }
            });
        });

        // Smooth scroll behavior for internal links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            showToast('Welcome to Swadeshi Mart! 🇮🇳', 'success');
        });

        // Add bounce animation keyframes via JavaScript
        const style = document.createElement('style');
        style.textContent = `
            @keyframes bounce {
                0%, 20%, 60%, 100% {
                    transform: translateY(0);
                }
                40% {
                    transform: translateY(-10px);
                }
                80% {
                    transform: translateY(-5px);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>'''

# Save the complete code to a file
with open('swadeshi_mart_complete.html', 'w', encoding='utf-8') as f:
    f.write(html_content)

print("Complete HTML file created: swadeshi_mart_complete.html")
print("File size:", len(html_content), "characters")
print("\nThis file contains:")
print("✅ Complete responsive HTML structure")
print("✅ Embedded CSS with Indian theme colors")
print("✅ Interactive JavaScript functionality")
print("✅ All 10 pages: Home, Category, Product, Cart, Checkout, Login, Profile, Orders, Search, Support")
print("✅ Mobile-first responsive design")
print("✅ Light/Dark theme toggle")
print("✅ Indian festive accents and colors")
print("✅ Smooth animations and transitions")
print("✅ Toast notifications and confetti effects")
